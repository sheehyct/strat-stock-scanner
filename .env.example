# Rate Limiting Configuration
ALPACA_REQUESTS_PER_MINUTE=180
MAX_CONCURRENT_REQUESTS=3

# Server Configuration
PORT=8080
DEBUG=false
SERVER_URL=https://your-app.up.railway.app  # REQUIRED: Set to your Railway deployment URL
