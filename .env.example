# Alpaca API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_BASE_URL=https://data.alpaca.markets/v2

# OAuth 2.1 Configuration
